{
  "name": "@hyperspan/framework",
  "version": "0.3.2",
  "description": "Hyperspan Web Framework",
  "main": "dist/server.ts",
  "types": "src/server.ts",
  "public": true,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/server.ts",
      "default": "./dist/server.js"
    },
    "./server": {
      "types": "./src/server.ts",
      "default": "./dist/server.js"
    },
    "./assets": {
      "types": "./src/assets.ts",
      "default": "./dist/assets.js"
    },
    "./middleware": {
      "types": "./src/middleware.ts",
      "default": "./dist/middleware.js"
    },
    "./unstable/actions": {
      "types": "./src/actions.ts",
      "default": "./src/actions.ts"
    }
  },
  "author": "Vance Lucas <vance@vancelucas.com>",
  "license": "BSD-3-Clause",
  "keywords": [
    "framework",
    "node",
    "bun",
    "web framework",
    "javascript",
    "typescript",
    "streaming",
    "hypermedia"
  ],
  "homepage": "https://www.hyperspan.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vlucas/hyperspan.git"
  },
  "bugs": {
    "url": "https://github.com/vlucas/hyperspan/issues"
  },
  "scripts": {
    "build": "bun ./build.ts && sed -i '' -e '$ d' dist/assets.js",
    "clean": "rm -rf dist",
    "test": "bun test",
    "prepack": "bun run clean && bun run build"
  },
  "devDependencies": {
    "@types/bun": "^1.2.14",
    "@types/node": "^22.15.20",
    "@types/react": "^19.1.5",
    "@types/timestring": "^7.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@hyperspan/html": "^0.1.7",
    "hono": "^4.7.10",
    "isbot": "^5.1.28",
    "timestring": "^7.0.0",
    "zod": "^3.25.67"
  }
}
