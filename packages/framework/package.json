{
  "name": "@hyperspan/framework",
  "version": "1.0.0-alpha.9",
  "description": "Hyperspan Web Framework",
  "main": "src/server.ts",
  "types": "src/server.ts",
  "public": true,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./server": {
      "types": "./src/server.ts",
      "default": "./src/server.ts"
    },
    "./middleware": {
      "types": "./src/middleware.ts",
      "default": "./src/middleware.ts"
    },
    "./utils": {
      "types": "./src/utils.ts",
      "default": "./src/utils.ts"
    },
    "./layout": {
      "types": "./src/layout.ts",
      "default": "./src/layout.ts"
    },
    "./client/css": {
      "types": "./src/client/css.ts",
      "default": "./src/client/css.ts"
    },
    "./client/js": {
      "types": "./src/client/js.ts",
      "default": "./src/client/js.ts"
    },
    "./plugins": {
      "types": "./src/plugins.ts",
      "default": "./src/plugins.ts"
    },
    "./actions": {
      "types": "./src/actions.ts",
      "default": "./src/actions.ts"
    }
  },
  "author": "Vance Lucas <vance@vancelucas.com>",
  "license": "BSD-3-Clause",
  "keywords": [
    "framework",
    "node",
    "bun",
    "web framework",
    "javascript",
    "typescript",
    "streaming",
    "hypermedia"
  ],
  "homepage": "https://www.hyperspan.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vlucas/hyperspan.git"
  },
  "bugs": {
    "url": "https://github.com/vlucas/hyperspan/issues"
  },
  "scripts": {
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/node": "^24.10.0",
    "prettier": "^3.5.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hyperspan/html": "^1.0.0-alpha",
    "zod": "^4.1.12"
  }
}
