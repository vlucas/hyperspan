{
  "name": "@hyperspan/framework",
  "version": "0.1.3",
  "description": "Hyperspan Web Framework",
  "main": "dist/server.js",
  "public": true,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/server.ts",
      "default": "./dist/server.js"
    },
    "./server": {
      "types": "./src/server.ts",
      "default": "./dist/server.js"
    },
    "./actions": {
      "types": "./src/actions.ts",
      "default": "./src/actions.ts"
    },
    "./assets": {
      "types": "./src/assets.ts",
      "default": "./dist/assets.js"
    }
  },
  "author": "Vance Lucas <vance@vancelucas.com>",
  "license": "BSD-3-Clause",
  "keywords": [
    "framework",
    "node",
    "bun",
    "web framework",
    "javascript",
    "typescript",
    "streaming",
    "hypermedia"
  ],
  "homepage": "https://www.hyperspan.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vlucas/hyperspan.git"
  },
  "bugs": {
    "url": "https://github.com/vlucas/hyperspan/issues"
  },
  "scripts": {
    "build": "bun ./build.ts && sed -i '' -e '$ d' dist/assets.js",
    "clean": "rm -rf dist",
    "test": "bun test",
    "prepack": "bun run clean && bun run build"
  },
  "devDependencies": {
    "@types/bun": "^1.1.9",
    "@types/node": "^22.5.5",
    "@types/react": "^19.1.0",
    "bun-plugin-dts": "^0.3.0",
    "bun-types": "latest",
    "prettier": "^3.2.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hyperspan/html": "^0.1.2",
    "@preact/compat": "^18.3.1",
    "hono": "^4.7.4",
    "isbot": "^5.1.25",
    "zod": "^4.0.0-beta.20250415T232143"
  }
}
