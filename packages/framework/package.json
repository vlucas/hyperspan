{
  "name": "@hyperspan/framework",
  "version": "0.6.0",
  "description": "Hyperspan Web Framework",
  "main": "src/server.ts",
  "types": "src/server.ts",
  "public": true,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/server.ts",
      "default": "./src/server.ts"
    },
    "./server": {
      "types": "./src/server.ts",
      "default": "./src/server.ts"
    }
  },
  "author": "Vance Lucas <vance@vancelucas.com>",
  "license": "BSD-3-Clause",
  "keywords": [
    "framework",
    "node",
    "bun",
    "web framework",
    "javascript",
    "typescript",
    "streaming",
    "hypermedia"
  ],
  "homepage": "https://www.hyperspan.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vlucas/hyperspan.git"
  },
  "bugs": {
    "url": "https://github.com/vlucas/hyperspan/issues"
  },
  "scripts": {
    "build": "bun ./build.ts && sed -i '' -e '$ d' dist/assets.js",
    "clean": "rm -rf dist",
    "test": "bun test",
    "prepack": "bun run clean && bun run build"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/node": "^24.10.0",
    "prettier": "^3.5.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hyperspan/html": "0.2.0",
    "zod": "^4.1.12"
  }
}
